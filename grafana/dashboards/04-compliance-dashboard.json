{
  "dashboard": {
    "title": "AML/Fraud Detector - Compliance Dashboard",
    "tags": ["compliance", "cases", "sar"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Compliance Cases Created",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(compliance_cases_created_total[5m])",
            "legendFormat": "Cases Created",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Cases/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Open Compliance Cases",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "compliance_open_cases",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Pending SARs",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "compliance_pending_sars",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 20, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Cases by Status",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(compliance_cases_by_status_total[5m])) by (status)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Cases/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Cases by Priority",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(compliance_cases_by_priority_total[5m])) by (priority)",
            "legendFormat": "{{priority}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 6,
        "title": "SAR Filing Metrics",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(compliance_sars_created_total[5m])",
            "legendFormat": "SARs Created",
            "refId": "A"
          },
          {
            "expr": "rate(compliance_sars_filed_total[5m])",
            "legendFormat": "SARs Filed",
            "refId": "B"
          },
          {
            "expr": "rate(compliance_sars_approved_total[5m])",
            "legendFormat": "SARs Approved",
            "refId": "C"
          },
          {
            "expr": "rate(compliance_sars_rejected_total[5m])",
            "legendFormat": "SARs Rejected",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "SARs/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Case Resolution Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(compliance_case_resolution_time_bucket[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(compliance_case_resolution_time_bucket[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(compliance_case_resolution_time_bucket[5m])) by (le))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "h", "label": "Resolution Time (hours)"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Case Escalation Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum(rate(compliance_cases_escalated_total[5m])) / sum(rate(compliance_cases_created_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 20, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "SAR Filing Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(compliance_sar_filing_time_bucket[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(compliance_sar_filing_time_bucket[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "h", "label": "Filing Time (hours)"},
          {"format": "short"}
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}

