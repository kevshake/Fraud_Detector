# Environment Configuration Template
# Copy this to .env and fill in your actual values

# ===================================================================
# DATABASE CONFIGURATION (REQUIRED)
# ===================================================================
DATABASE_URL=jdbc:postgresql://localhost:5432/aml_fraud_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_actual_password_here

# ===================================================================
# SECURITY KEYS (REQUIRED - Generate secure random keys)
# ===================================================================
ENCRYPTION_KEY=your_32_byte_encryption_key_here
AUDIT_HMAC_KEY=your_hmac_secret_key_for_audit_integrity

# ===================================================================
# EXTERNAL API CREDENTIALS
# ===================================================================
# Sumsub AML Provider
SUMSUB_ENABLED=true
SUMSUB_API_KEY=your_sumsub_app_token
SUMSUB_API_SECRET=your_sumsub_secret_key

# ===================================================================
# AEROSPIKE DATABASE (Optional)
# ===================================================================
AEROSPIKE_ENABLED=false
AEROSPIKE_HOSTS=localhost:3000
AEROSPIKE_USERNAME=
AEROSPIKE_PASSWORD=

# ===================================================================
# REDIS CACHE (Optional)
# ===================================================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev
LOG_LEVEL=INFO

# ===================================================================
# GENERATION COMMANDS
# ===================================================================
# Generate encryption key (32 bytes):
#   openssl rand -base64 32
#
# Generate HMAC key:
#   openssl rand -hex 64
# ===================================================================
